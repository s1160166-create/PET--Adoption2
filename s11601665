            // Game Actions
            const gameActions = document.querySelectorAll('.game-action');
            const eventContainer = document.getElementById('event-container');
            const endDayButton = document.getElementById('end-day');
            const petKnowledge = document.getElementById('pet-knowledge');
            const backToGame = document.getElementById('back-to-game');
            const proceedToQuiz = document.getElementById('proceed-to-quiz');
            
            // Pet Knowledge Elements
            const knowledgePetType = document.getElementById('knowledge-pet-type');
            const knowledgePetImage = document.getElementById('knowledge-pet-image');
            const avgLifespan = document.getElementById('avg-lifespan');
            const avgSize = document.getElementById('avg-size');
            const diet = document.getElementById('diet');
            const exerciseNeeds = document.getElementById('exercise-needs');
            const groomingNeeds = document.getElementById('grooming-needs');
            const petDescription = document.getElementById('pet-description');
            const careRequirements = document.getElementById('care-requirements');
            const healthIssues = document.getElementById('health-issues');
            const behavioralTraits = document.getElementById('behavioral-traits');
            
            // Initialize Game
            let currentPetType = null;
            
            petCards.forEach(card => {
                card.addEventListener('click', function() {
                    currentPetType = this.getAttribute('data-pet-type');
                    const petData = petTypes[currentPetType];
                    
                    if (petData) {
                        // Update game interface with selected pet
                        gamePetType.textContent = petData.name;
                        petAvatar.src = petData.image;
                        
                        // Reset game stats
                        resetGameStats();
                        
                        // Show game interface, hide pet selection
                        petSelection.classList.add('hidden');
                        gameInterface.classList.remove('hidden');
                        
                        // Add initial event
                        addEvent(`You've adopted a ${petData.name.toLowerCase()}! It's time to start your day of care.`);
                    }
                });
            });
            
            backToSelection.addEventListener('click', function() {
                // Show pet selection, hide game interface
                petSelection.classList.remove('hidden');
                gameInterface.classList.add('hidden');
                currentPetType = null;
            });
            
            function resetGameStats() {
                gameStats = {
                    hunger: 75,
                    happiness: 50,
                    health: 90,
                    hygiene: 60,
                    dayProgress: 0
                };
                
                updateStatsDisplay();
                updateMood();
            }
            
            function updateStatsDisplay() {
                document.getElementById('hunger-value').textContent = `${gameStats.hunger}%`;
                document.getElementById('happiness-value').textContent = `${gameStats.happiness}%`;
                document.getElementById('health-value').textContent = `${gameStats.health}%`;
                document.getElementById('hygiene-value').textContent = `${gameStats.hygiene}%`;
                document.getElementById('day-progress').style.width = `${gameStats.dayProgress}%`;
                
                document.getElementById('hunger-bar').style.width = `${gameStats.hunger}%`;
                document.getElementById('happiness-bar').style.width = `${gameStats.happiness}%`;
                document.getElementById('health-bar').style.width = `${gameStats.health}%`;
                document.getElementById('hygiene-bar').style.width = `${gameStats.hygiene}%`;
            }
            
            function updateMood() {
                const average = (gameStats.hunger + gameStats.happiness + gameStats.health + gameStats.hygiene) / 4;
                let moodIcon = 'fa-meh-o';
                
                if (average >= 80) {
                    moodIcon = 'fa-smile-o';
                    petMood.className = 'absolute -top-2 -right-2 bg-green-500 text-white rounded-full w-12 h-12 flex items-center justify-center shadow-md';
                } else if (average >= 60) {
                    moodIcon = 'fa-smile-o';
                    petMood.className = 'absolute -top-2 -right-2 bg-accent text-white rounded-full w-12 h-12 flex items-center justify-center shadow-md';
                } else if (average >= 40) {
                    moodIcon = 'fa-meh-o';
                    petMood.className = 'absolute -top-2 -right-2 bg-yellow-500 text-white rounded-full w-12 h-12 flex items-center justify-center shadow-md';
                } else {
                    moodIcon = 'fa-frown-o';
                    petMood.className = 'absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-12 h-12 flex items-center justify-center shadow-md';
                }
                
                petMood.innerHTML = `<i class="fa ${moodIcon} text-xl"></i>`;
            }
            
            function addEvent(message) {
                const eventElement = document.createElement('p');
                eventElement.className = 'mb-2 text-gray-700';
                eventElement.textContent = message;
                
                eventContainer.appendChild(eventElement);
                eventContainer.scrollTop = eventContainer.scrollHeight;
            }
            
            gameActions.forEach(action => {
                action.addEventListener('click', function() {
                    const actionType = this.getAttribute('data-action');
                    performAction(actionType);
                });
            });
            
            function performAction(actionType) {
                if (!currentPetType) return;
                
                const petData = petTypes[currentPetType];
                let eventMessage = '';
                
                switch(actionType) {
                    case 'feed':
                        gameStats.hunger = Math.min(100, gameStats.hunger + 20);
                        gameStats.health = Math.min(100, gameStats.health + 5);
                        eventMessage = `You fed your ${petData.name.toLowerCase()}. It seems happy and satisfied.`;
                        break;
                    case 'play':
                        gameStats.happiness = Math.min(100, gameStats.happiness + 25);
                        gameStats.hunger = Math.max(0, gameStats.hunger - 10);
                        eventMessage = `You played with your ${petData.name.toLowerCase()}. It had a great time!`;
                        break;
                    case 'health':
                        gameStats.health = Math.min(100, gameStats.health + 15);
                        eventMessage = `You checked your ${petData.name.toLowerCase()}'s health. Everything looks good!`;
                        break;
                    case 'groom':
                        gameStats.hygiene = Math.min(100, gameStats.hygiene + 20);
                        eventMessage = `You groomed your ${petData.name.toLowerCase()}. It looks clean and comfortable now.`;
                        break;
                }
                
                // Add event to log
                addEvent(eventMessage);
                
                // Update day progress
                gameStats.dayProgress = Math.min(100, gameStats.dayProgress + 10);
                
                // Update stats display
                updateStatsDisplay();
                updateMood();
            }
            
            endDayButton.addEventListener('click', function() {
                if (!currentPetType) return;
                
                const petData = petTypes[currentPetType];
                
                // Add final event
                addEvent(`The day has ended. You've taken care of your ${petData.name.toLowerCase()} for a day!`);
                
                // Show pet knowledge page
                gameInterface.classList.add('hidden');
                petKnowledge.classList.remove('hidden');
                
                // Update pet knowledge content
                knowledgePetType.textContent = `${petData.name} Care Basics`;
                knowledgePetImage.src = petData.image;
                avgLifespan.textContent = petData.lifespan;
                avgSize.textContent = petData.size;
                diet.textContent = petData.diet;
                exerciseNeeds.textContent = petData.exercise;
                groomingNeeds.textContent = petData.grooming;
                petDescription.textContent = petData.description;
                
                // Update care requirements list
                careRequirements.innerHTML = '';
                petData.careRequirements.forEach(requirement => {
                    const li = document.createElement('li');
                    li.textContent = requirement;
                    careRequirements.appendChild(li);
                });
                
                // Update health issues list
                healthIssues.innerHTML = '';
                petData.healthIssues.forEach(issue => {
                    const li = document.createElement('li');
                    li.textContent = issue;
                    healthIssues.appendChild(li);
                });
                
                // Update behavioral traits list
                behavioralTraits.innerHTML = '';
                petData.behavioralTraits.forEach(trait => {
                    const li = document.createElement('li');
                    li.textContent = trait;
                    behavioralTraits.appendChild(li);
                });
            });
            
            backToGame.addEventListener('click', function() {
                petKnowledge.classList.add('hidden');
                gameInterface.classList.remove('hidden');
            });
            
            proceedToQuiz.addEventListener('click', function() {
                // Navigate to quiz page with the current pet type pre-selected
                navigateToPage('quiz');
                
                // After a short delay, select the corresponding quiz category
                setTimeout(() => {
                    const quizCategory = document.querySelector(`.quiz-category[data-quiz-type="${currentPetType}"]`);
                    if (quizCategory) {
                        quizCategory.click();
                    }
                }, 100);
            });
            
